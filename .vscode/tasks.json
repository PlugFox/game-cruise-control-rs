{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cargo:lint",
            "detail": "Lint Rust using cargo clippy.",
            "type": "shell",
            "command": "cargo clippy",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "cargo:format",
            "detail": "Format Rust using cargo fmt.",
            "type": "shell",
            "command": "cargo",
            "args": [
                "fmt",
                "--all",
                "--",
                "--check"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "none",
                "isDefault": false
            },
            "problemMatcher": []
        },
        {
            "label": "cargo:fix",
            "detail": "Fix Rust code using cargo fix.",
            "type": "shell",
            "command": "cargo",
            "args": [
                "fix",
                "--allow-dirty",
                "--allow-staged"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "none",
                "isDefault": false
            },
            "problemMatcher": []
        },
        {
            "label": "cargo:test",
            "detail": "Run tests for Rust using cargo test.",
            "type": "shell",
            "command": "cargo test",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "cargo:build",
            "detail": "Build Rust using cargo build.",
            "type": "shell",
            "command": "cargo build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "label": "test:all",
            "detail": "Run all tests with output",
            "icon": {
                "color": "terminal.ansiGreen",
                "id": "beaker"
            },
            "type": "shell",
            "command": "cargo",
            "args": [
                "test",
                "--",
                "--nocapture"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "RUST_LOG": "debug",
                    "RUST_BACKTRACE": "1"
                }
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": [
                "$rustc"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "test:db:concurrency",
            "detail": "Run database concurrency tests",
            "icon": {
                "color": "terminal.ansiRed",
                "id": "database"
            },
            "type": "shell",
            "command": "cargo",
            "args": [
                "test",
                "db::tests",
                "--release",
                "--",
                "--nocapture"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "RUST_LOG": "debug",
                    "RUST_BACKTRACE": "1"
                }
            },
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "problemMatcher": [
                "$rustc"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "test:stress",
            "detail": "Run high contention stress test",
            "icon": {
                "color": "terminal.ansiYellow",
                "id": "zap"
            },
            "type": "shell",
            "command": "cargo",
            "args": [
                "test",
                "test_high_contention_stress",
                "--release",
                "--",
                "--nocapture"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "RUST_LOG": "debug",
                    "RUST_BACKTRACE": "1"
                }
            },
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "problemMatcher": [
                "$rustc"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "cargo:clippy",
            "detail": "Run clippy linter",
            "icon": {
                "color": "terminal.ansiCyan",
                "id": "tools"
            },
            "type": "shell",
            "command": "cargo",
            "args": [
                "clippy",
                "--all-targets",
                "--all-features"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [
                "$rustc"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "run:release",
            "detail": "Run in release mode",
            "icon": {
                "color": "terminal.ansiGreen",
                "id": "rocket"
            },
            "type": "shell",
            "command": "cargo",
            "args": [
                "run",
                "--release",
                "--bin",
                "main"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "RUST_LOG": "info"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "isBackground": true,
            "problemMatcher": [
                "$rustc"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "dev:check",
            "detail": "Quick development check: format, clippy, and test",
            "icon": {
                "color": "terminal.ansiMagenta",
                "id": "checklist"
            },
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "cargo fmt; if ($LASTEXITCODE -eq 0) { cargo clippy --all-targets --all-features; if ($LASTEXITCODE -eq 0) { cargo test -- --nocapture } }"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "RUST_LOG": "debug",
                    "RUST_BACKTRACE": "1"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [
                "$rustc"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": true
            }
        },
        {
            "label": "run:debug",
            "detail": "Run in debug mode with hot reload",
            "icon": {
                "color": "terminal.ansiBlue",
                "id": "debug-start"
            },
            "type": "shell",
            "command": "cargo",
            "args": [
                "run",
                "--bin",
                "main"
            ],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "RUST_LOG": "debug",
                    "RUST_BACKTRACE": "1"
                }
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "isBackground": true,
            "problemMatcher": [
                "$rustc"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ]
}